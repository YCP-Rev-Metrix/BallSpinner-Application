<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="RevMetrix.BallSpinner.FrontEnd.InitialValues"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:RevMetrix.BallSpinner.FrontEnd;assembly=FrontEnd"
    xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.Maui;assembly=LiveChartsCore.SkiaSharpView.Maui"
    Title="InitialValues">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="400"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400"/>
            <ColumnDefinition Width="1"/>
        </Grid.ColumnDefinitions>

        <lvc:CartesianChart Grid.Row="0"
                            Grid.Column="0"
                            Series="{Binding Series}"/>

        <Grid Grid.Row="0"
              Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="374"/>
                <RowDefinition Height="26"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1"/>
            </Grid.ColumnDefinitions>
            <Slider x:Name="MaxVal"
                    Grid.Row="0"
                    Grid.Column="0"
                    Maximum="800"
                    Minimum="0"
                    Rotation="-90"
                    VerticalOptions="Center"
                    WidthRequest="286"/>
            <!--Label Grid.Row="1"
                   Grid.Column="0"
                   VerticalOptions="Center"
                   BindingContext="{x:Reference Name=MaxVal}"
                   Text="{Binding Value}"
                   FontSize="16"/-->
        </Grid>

        <Editor x:Name="Comment"
                Grid.Row="1"
                Grid.Column="0"
                HorizontalOptions="End"
                WidthRequest="360"
                Placeholder="Comment can be placed here..."/>

        <HorizontalStackLayout  Grid.Column="0"
                                Grid.Row="2">
            <Label VerticalOptions="Center"
                   Margin="50, 10, 10, 10"
                   FontSize="20"
                   Text="Ball: "/>
            <Picker x:Name="BallSelection"
                    ItemsSource="{Binding Arsenal}"
                    ItemDisplayBinding="{Binding Name}"
                    HeightRequest="20"
                    WidthRequest="190"/>
            <Button Margin="20, 10, 10, 10"
                    HeightRequest="30"
                    HorizontalOptions="End"
                    Clicked="PassValues"
                    Text="Submit"/>
        </HorizontalStackLayout>
    </Grid>
</ContentPage>