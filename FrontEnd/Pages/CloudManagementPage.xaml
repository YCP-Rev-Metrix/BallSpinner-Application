<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RevMetrix.BallSpinner.FrontEnd.CloudManagementPage"
             Title="CloudManagementPage">

    <Grid Margin="20,20,20,20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="70" />
        </Grid.RowDefinitions>

        <Label Margin="0,20,0,10"
               FontSize="26"
               Text="Manage Shots"
               HorizontalOptions="Center"/>

        <ScrollView Grid.Row="1" 
                    Margin="10,0,0,0"
                    Orientation="Both">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" 
                      Margin="10,0,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200" />
                        <ColumnDefinition Width="100" />
                        <ColumnDefinition Width="100" />
                        <ColumnDefinition Width="100" />
                        <ColumnDefinition Width="120" />
                        <ColumnDefinition Width="100" />
                    </Grid.ColumnDefinitions>

                    <Label Grid.Column="0"
                           FontSize="18"
                           Text="Name" />
                    <Label Grid.Column="1"
                           FontSize="18"
                           Text="Count" />
                    <Label Grid.Column="2"
                        FontSize="18"
                        Text="Comments" />
                </Grid>

                <ListView Grid.Row="1"
                          Margin="0,10,0,0"
                          ItemsSource="{Binding Shots}"
                          VerticalScrollBarVisibility="Always"
                          HorizontalScrollBarVisibility="Always"
                          SelectionMode="Single"
                          ItemSelected="NewSelection">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <Grid Padding="10">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="200" />
                                        <ColumnDefinition Width="100" />
                                        <ColumnDefinition Width="100" />
                                        <ColumnDefinition Width="100" />
                                        <ColumnDefinition Width="120" />
                                        <ColumnDefinition Width="100" />
                                    </Grid.ColumnDefinitions>
                                    <Label Grid.Column="0" 
                                           Text="{Binding shotinfo.Name}" />
                                    <Label Grid.Column="1"
                                           Text="{Binding shotinfo.DataCount}" />
                                    <Label Grid.Column="2"
                                        Text="{Binding shotinfo.Comments}" />
                                </Grid>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
        </ScrollView>

        <HorizontalStackLayout Grid.Row="2">
            <Button Margin="10"
                    Clicked="LoadSim"
                    Text="Load Shot" />
            <Button Margin="10"
                    Clicked="LoadInitial"
                    Text="Load Initial Values" />
            <Button Margin="10"
                    Clicked="Refresh"
                    Text="Refresh" />
            <Button Margin="10"
                    Clicked="DeleteShot"
                    Text="Delete Selection" />
        </HorizontalStackLayout>
    </Grid>

</ContentPage>