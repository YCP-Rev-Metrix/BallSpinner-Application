<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="RevMetrix.BallSpinner.FrontEnd.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <ContentPage.MenuBarItems>
        <MenuBarItem Text="File">
            <MenuFlyoutItem
                Clicked="OnNewShotButtonClicked"
                IsEnabled="false"
                Text="New Shot" />
            <MenuFlyoutItem
                Clicked="OnLoadShotButtonClicked"
                IsEnabled="false"
                Text="Load Shot" />
            <MenuFlyoutItem
                Clicked="OnSaveShotButtonClicked"
                IsEnabled="false"
                Text="Save Shot As..." />
            <MenuFlyoutItem
                Clicked="OnOptionsButtonClicked"
                IsEnabled="false"
                Text="Options" />
            <MenuFlyoutItem
                Clicked="OnExitButtonClicked"
                IsEnabled="true"
                Text="Exit" />
        </MenuBarItem>

        <MenuBarItem Text="View">
            <MenuFlyoutItem
                Clicked="OnResetButtonClicked"
                IsEnabled="false"
                Text="Reset" />
        </MenuBarItem>

        <MenuBarItem Text="Help">
            <MenuFlyoutItem
                Clicked="OnHelpButtonClicked"
                IsEnabled="false"
                Text="Help" />
        </MenuBarItem>
    </ContentPage.MenuBarItems>

    <ContentPage.ToolbarItems>
        <ToolbarItem
            Clicked="OnButtonAClicked"
            IsEnabled="false"
            Text="Toolbar Button A" />
        <ToolbarItem
            Clicked="OnButtonBClicked"
            IsEnabled="true"
            Text="Toolbar Button B" />
    </ContentPage.ToolbarItems>

    <VerticalStackLayout Padding="30,0" Spacing="25">
        <ScrollView>
            <Grid HeightRequest="750">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="2*" />
                    </Grid.ColumnDefinitions>

                    <WebView Grid.Column="0" Source="Pages/ThreeJS/ThreeJS.html" />
                    <Grid Grid.Column="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="1*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*" />
                            <RowDefinition Height="1*" />
                        </Grid.RowDefinitions>

                        <WebView
                            Grid.Row="0"
                            Grid.Column="0"
                            Source="Pages/ChartJS/ChartJS.html" />

                        <WebView
                            Grid.Row="0"
                            Grid.Column="1"
                            Source="Pages/ChartJS/ChartJS.html" />

                        <WebView
                            Grid.Row="1"
                            Grid.Column="0"
                            Source="Pages/ChartJS/ChartJS.html" />

                        <WebView
                            Grid.Row="1"
                            Grid.Column="1"
                            Source="Pages/ChartJS/ChartJS.html" />
                    </Grid>
                </Grid>
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="2*" />
                    </Grid.ColumnDefinitions>

                    <WebView Grid.Column="0" Source="Pages/ThreeJS/ThreeJS.html" />
                    <Grid Grid.Column="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="1*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*" />
                            <RowDefinition Height="1*" />
                        </Grid.RowDefinitions>

                        <WebView
                            Grid.Row="0"
                            Grid.Column="0"
                            Source="Pages/ChartJS/ChartJS.html" />

                        <WebView
                            Grid.Row="0"
                            Grid.Column="1"
                            Source="Pages/ChartJS/ChartJS.html" />

                        <WebView
                            Grid.Row="1"
                            Grid.Column="0"
                            Source="Pages/ChartJS/ChartJS.html" />

                        <WebView
                            Grid.Row="1"
                            Grid.Column="1"
                            Source="Pages/ChartJS/ChartJS.html" />
                    </Grid>
                </Grid>
            </Grid>
        </ScrollView>

        <Button
            Clicked="OnAddBallSpinnerButtonClicked"
            HorizontalOptions="Center"
            Text="Add BallSpinner"
            VerticalOptions="Center" />

        <Button
            Clicked="OnButtonClicked"
            HorizontalOptions="Center"
            Text="Login"
            VerticalOptions="Center" />
        <Label
            x:Name="label"
            FontSize="18"
            HorizontalOptions="Center"
            Text="Click the Button above"
            VerticalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>
