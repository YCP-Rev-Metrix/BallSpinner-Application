<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="RevMetrix.BallSpinner.FrontEnd.BallSpinnerView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:RevMetrix.BallSpinner.FrontEnd">
    <Border>
        <VerticalStackLayout>
            <Label Text="{Binding Name}" />
            <Grid HeightRequest="325">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="2*" />
                </Grid.ColumnDefinitions>

                <Border>
                    <WebView
                        x:Name="LeftView"
                        Grid.Column="0"
                        Source="{Binding LeftView.Source}" />
                </Border>
                <Grid Grid.Column="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="1*" />
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Grid.Column="0">
                        <WebView
                            x:Name="TopMiddleView"
                            InputTransparent="True"
                            Source="{Binding TopMiddleView.Source}" />
                    </Border>
                    <Border Grid.Row="0" Grid.Column="1">
                        <WebView InputTransparent="True" Source="{Binding BottomMiddleView.Source}" />
                    </Border>
                    <Border Grid.Row="1" Grid.Column="0">
                        <WebView InputTransparent="True" Source="{Binding TopRightView.Source}" />
                    </Border>
                    <Border Grid.Row="1" Grid.Column="1">
                        <WebView InputTransparent="True" Source="{Binding BottomRightView.Source}" />
                    </Border>
                </Grid>
            </Grid>
        </VerticalStackLayout>
    </Border>
</ContentView>
